@model IEnumerable<HomeSlider>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="header d-flex justify-content-between">
                    <h4 class="card-title">Home page sliders</h4>
                    <a class="btn btn-inverse-success" asp-controller="HomeSlider" asp-action="Create">
                        Create New
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>â„–</th>
                            <th>Title</th>
                            <th>Settings</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>
                                    <a class="btn btn-outline-info" asp-controller="HomeSlider" asp-action="Detail" asp-route-id="@item.Id">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a class="btn btn-outline-secondary" asp-controller="HomeSlider" asp-action="Update" asp-route-id="@item.Id">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a class="btn btn-inverse-danger" asp-controller="HomeSlider" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>