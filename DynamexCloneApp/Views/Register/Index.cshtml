@model Register
@section styles {
    <link href="@Url.Content("~/css/register.css")" rel="stylesheet" type="text/css" />
}
@section scripts {
    <script src="js/register.js" defer=""></script>
}
@{
    ViewBag.Title = "Qeydiyyat Formu";
    Layout = "_Layout";
}

<main>
<!-- SECTIONS START -->
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="register-title d-flex justify-content-center">
                <b>Dynamex-ə xoş gəlmişsiniz!</b>
            </div>
            <div class="register-description d-flex justify-content-center">
                <p>Şəxsi hesabınızı yaradın!</p>
            </div>
        </div>
    </div>
</section>
<section id="register">
<div class="container">
<div class="row">
<div class="left col-lg-7 col-md-12">
<div class="register-form">
<div class="title">
    Qeydiyyat formu
</div>
