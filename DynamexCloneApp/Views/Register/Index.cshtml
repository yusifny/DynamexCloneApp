                <option value="SIY">Siyəzən </option>
                <option value="SM">Sumqayıt</option>
                <option value="TAR">Tərtər </option>
                <option value="TOV">Tovuz </option>
                <option value="UCA">Ucar </option>
                <option value="YAR">Yardımlı </option>
                <option value="YE">Yevlax</option>
                <option value="YEV">Yevlax </option>
                <option value="ZAN">Zəngilan </option>
                <option value="ZAQ">Zaqatala </option>
                <option value="ZAR">Zərdab </option>
            </select>
        </div>
        <div class="form-group col-5 d-flex flex-column">
            <select asp-for="DynamexBranch" name="branch" class="branch" >
                <option hidden>Filial</option>
                <option value="28may">28 May</option>
                <option value="Ganaja">Gəncə</option>
                <option value="Sumgait">Sumqayıt</option>
                <option value="Yasamal">Yasamal</option>
                <option value="Khaglar">Xalqlar Dostluğu</option>
                <option value="Khirdalan">Xırdalan</option>
                <option value="Akhmadli">Əhmədli</option>
                <option value="Bakikhanov">Bakıxanov</option>
                <option value="AzerPost">Azerpoçt</option>
                <option value="NewPost">Yeni Poçt</option>
                <option value="Courier">Kuryer</option>
            </select>
        </div>
    </div>
    <div class="form-comp" style="width: 79.5%;">
        <div class="form-group col-10 d-flex flex-column">
            <input asp-for="HomeAddress" name="address" class="address" placeholder="Ünvan">
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="Password" name="password" placeholder="Şifrə">
        </div>
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="CheckPassword" name="conf-password" placeholder="Təkrar şifrə">
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex align-items-center gap-2">
            <input asp-for="Agreement" name="agreement">
            <div class="text">
                <a asp-controller="Agreement" style="color: #15b2ec;">
                    İstifadəçi Şərtləri
                </a>
                <span style="font-size: 13px">ilə razıyam</span>
            </div>
        </div>
        <div class="form-group col-5 d-flex">
            <a href="https://youtu.be/mn-va-DWDmk" target="_blank" class="d-flex align-items-center">
                <i>
                    <span class="iconify" data-icon="octicon:video-16" data-height="16"></span>
                </i>
                <span style="margin-left: .5rem;">Qeydiyyat prosesini izləyin</span>
            </a>
        </div>
    </div>
    <div class="btn-wrap d-flex justify-content-center">
        <input class="register btn" type="submit" value="Qeydiyyatdan keç">
    </div>
</form>
