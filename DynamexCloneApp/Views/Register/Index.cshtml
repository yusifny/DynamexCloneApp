                <option value="LAN">Lənkəran</option>
                <option value="LA">Lənkəran </option>
                <option value="LER">Lerik </option>
                <option value="MAS">Masallı </option>
                <option value="MI">Mingəçevir</option>
                <option value="NX">Naxçıvan Muxtar Respublikası</option>
                <option value="NEF">Neftçala </option>
