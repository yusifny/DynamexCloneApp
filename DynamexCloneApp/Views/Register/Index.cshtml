<form method="post" class="form col-12 natural-person">
    <div class="form-comp">
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="FirstName" name="name" placeholder="Ad">
            <span asp-validation-for="FirstName" style="color: red"></span>
        </div>
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="LastName" name="surname" placeholder="Soyad">
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="Email" name="email" placeholder="Email">
        </div>
        <div class="form-group col-5 d-flex">
            <select name="phone-number-code" id="phone-number-code" class="id-type" required>
                <option value="050">050</option>
                <option value="051">051</option>
                <option value="055">055</option>
                <option value="099">099</option>
                <option value="070">070</option>
                <option value="077">077</option>
                <option value="060">060</option>
                <option value="010">010</option>
            </select>
            <input asp-for="PhoneNumber" name="phone-number" class="id-number" placeholder="Mobil nömrə">
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="BirthDate" type="text" placeholder="Doğum tarixi" name="birth-date" style="cursor: pointer;" onfocus="(this.type='date')" onblur="(this.type='text')">
        </div>
        <div class="form-group col-5 d-flex flex-column">
            <select asp-for="IsResident" class="nationality">
                <option hidden>Vətəndaşlıq</option>
                <option value="resident">Azərbaycan Respublikasının vətəndaşı (Rezident)</option>
                <option value="non-resident">Başqa ölkənin vətəndaşı (Qeyri-rezident)</option>
            </select>
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex">
            <select name="id-type" id="id-type" class="id-type" >
                <option value="AZE">AZE</option>
                <option value="AA">AA</option>
            </select>
            <input asp-for="IdNumber" name="id-number" class="id-number" placeholder="Vəsiqənin nömrəsi">
        </div>
        <div class="form-group col-5 d-flex flex-column">
            <input asp-for="IdPin" name="id-pin" placeholder="FIN kod">
        </div>
    </div>
    <div class="form-comp">
        <div class="form-group col-5 d-flex flex-column">
            <select asp-for="City" class="city" name="city">
                <option hidden>Şəhər</option>
                <option value="AGS">Ağdaş </option>
                <option value="AGC">Ağcabədi </option>
                <option value="AGA">Ağstafa </option>
                <option value="AGU">Ağsu </option>
                <option value="AST">Astara </option>
                <option value="BAB">Babək </option>
                <option value="BA">Bakı</option>
                <option value="BAL">Balakən </option>
                <option value="BAR">Bərdə </option>
                <option value="BEY">Beyləqan </option>
                <option value="BIL">Biləsuvar </option>
                <option value="DAS">Daşkəsən </option>
                <option value="FUZ">Füzuli </option>
                <option value="GA">Gəncə</option>
