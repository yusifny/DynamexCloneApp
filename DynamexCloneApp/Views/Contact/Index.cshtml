@model object
@section styles {
    <link href="@Url.Content("~/css/contact.css")" rel="stylesheet" type="text/css" />
}
@section scripts {
    <script src="js/send-email.js" defer></script>
    <script src="js/maps.js" defer></script>
}
@{
    ViewBag.Title = "Əlaqə";
    Layout = "_Layout";
}

<main>
    <!-- SECTIONS START -->
    <section id="intro">
        <div class="container">
            <div class="row">
                <div class="contact-title d-flex justify-content-center">
                    <b>Əlaqə</b>
                </div>
                <div class="contact-description d-flex justify-content-center text-center">
                    <p>
                        Bizlə heç çəkinmədən əlaqə saxlayın, daim xidmətinizdəyik!
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-12 info">
                    <div class="info-title">
                        <b>Əlaqə məlumatları</b>
                    </div>
                    <div class="info-content col-12 d-flex flex-column gap-5">
                        <div class="tel-wrap d-flex align-items-center gap-3">
                            <div class="col-6 tel d-flex">
                                <span class="iconify icons" data-icon="healthicons:phone" style="color: #f5a416;" data-height="22"></span>
                            </div>
                            <div class="tel-detail d-flex flex-column">
                                <a href="tel:*7171">*7171</a>
                            </div>
                        </div>
                        <div class="email-wrap d-flex align-items-center gap-3">
                            <div class="col-6 email d-flex">
                                <span class="iconify icons" data-icon="mi:email" style="color: #00c99c;" data-height="22"></span>
                            </div>
                            <div class="email-detail d-flex flex-column">
                                <a href="mailto:info@dynamex.az">Problemli şöbə ilə əlaqə: info@dynamex.az</a>
                                <a href="mailto:hr@dynamex.az">Əməkdaşlıq üçün : hr@dynamex.az</a>
                            </div>
                        </div>
                        <div class="hours-wrap col-12 d-flex gap-3">
                            <div class="col-6 hours d-flex">
                                <span class="iconify icons" data-icon="ic:outline-date-range" style="color: #f12699;" data-height="22"></span>
                            </div>
                            <div class="hours-list d-flex flex-column">
                                <ul class="contact-hours-list">
                                    <li> <b>28 May</b> - Hər gün 09:00-21:00 </li>
                                    <li> <b>Gəncə</b> - Hər gün: 09:00-20:00-dək</li>
                                    <li> <b>Sumqayıt</b> - Hər gün 10:00-20:00</li>
                                    <li> <b>Xırdalan</b> - Hər gün 10:00-21:00</li>
                                    <li> <b>Əhmədli</b> - Hər gün 10:00-21:00</li>
                                    <li> <b>Bakıxanov</b> - Hər gün 10:00-21:00</li>
                                    <li> <b>Xalqlar</b> - Həftə içi 09:00-19:30, <br> Şənbə və Bazar 09:00-18:00</li>
                                    <li> <b>Memar Əcəmi</b> - Həftə içi 09:00-20:00, <br> Şənbə-Bazar 10:00-20:00</li>
                                    <li> <b>Yasamal</b> - Həftə içi 09:00-19:30, <br> Şənbə 09:00-18:00, Bazar 09:00-17:00</li>
                                </ul>
                            </div>
                        </div>
                        <div class="address-wrap col-12 d-flex gap-3">
                            <div class="col-6 address d-flex">
                                <span class="iconify icons" data-icon="codicon:location" style="color: #15b2ec;" data-height="25"></span>
                            </div>
                            <div class="address-detail d-flex flex-column">
                                <ul class="contact-address-list">
                                    <li>
                                        28 May, Dəmir yolu vağzalı 2-ci mərtəbə AZ 1020.
                                    </li>
                                    <li>
                                        Gəncə ş, AZ 2013 Kəpəz r-nu, N.Nərimanov pr, 42C.
                                    </li>
                                    <li>
                                        Sumqayıt ş, H.Əliyev pr, 493-503,14 mərtəbənin yanı.
                                    </li>
                                    <li>
                                        Xalqlar Dostluğu, İsmayıl Məmmədov küçəsi 6, AZ1142.
                                    </li>
                                    <li>
                                        Yasamal, A.M.Şərifzadə küç, Şəbəkə xidmət mərkəzi AZ1138.
                                    </li>
                                    <li>
                                        Xırdalan ş. H.Əliyev pr. 11, Kristal Abşeron 2.
                                    </li>
                                    <li>
                                        Əhmədli Ukrayna dairəsi, Gəncə pr, Vunq Tau küç 2.
                                    </li>
                                    <li>
                                        Bakıxanov qəs, S.Qocayev küç, AZ1132-ın yanı.
                                    </li>
                                    <li>
                                        Nəsimi r-nu, 3-cü mkr, Hüseynbala Əliyev küç.
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="socials d-flex col-11">
                        <a href="https://www.facebook.com/dynamex.az/" class="social">
                            <span class="iconify" data-icon="cib:facebook-f" data-height="20" style="color: #7b7b93;"></span>
                        </a>
                        <a href="https://dynamex.az/about-us.html#" class="social">
                            <span class="iconify" data-icon="akar-icons:twitter-fill" data-height="20" style="color: #7b7b93;"></span>
                        </a>
                        <a href="https://www.instagram.com/dynamic.express/?hl=en" class="social">
                            <span class="iconify" data-icon="akar-icons:instagram-fill" data-height="20" style="color: #7b7b93;"></span>
                        </a>
                        <a href="https://www.youtube.com/channel/UCnNG1fkf-8Wd3SKbS0Ioavg/featured" class="social">
                            <i>
                                <span class="iconify" data-icon="akar-icons:youtube-fill" data-height="20" style="color: #7b7b93;"></span>
                            </i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-12 form">
                    <div class="form-title">
                        <b>Sualınız var? Bizə yazın!</b>
                    </div>
                    <div class="form-content">
                        <form id="form">
                            <div class="name-surname col-12 d-flex">
                                <div class="col-6 name form-group">
                                    <label for="first-name">Ad</label>
                                    <input type="text" name="name" id="first-name">
                                    <span class="name-err d-flex justify-content-start">Ad boş qoyula bilməz</span>
                                </div>
                                <div class="col-6 surname form-group">
                                    <label for="last-name">Soyad</label>
                                    <input type="text" name="surname" id="last-name">
                                    <span class="surname-err d-flex justify-content-start">Soyad boş qoyula bilməz</span>
                                </div>
                            </div>
                            <div class="costumer-contacts form-group col-12 d-flex">
                                <div class="col-6 tel form-group">
                                    <label for="phone-number">Telefon</label>
                                    <input type="tel" name="tel" id="phone-number">
                                    <span class="tel-err d-flex justify-content-start">Telefon boş qoyula bilməz</span>
                                </div>
                                <div class="col-6 email form-group">
                                    <label for="email-address">Email</label>
                                    <input type="email" name="email" id="email-address">
                                    <span class="mail-err d-flex justify-content-start">Email boş qoyula bilməz</span>
                                </div>
                            </div>
                            <div class="col-12 message form-group">
                                <label for="text-message">Mesaj</label>
                                <textarea name="message" id="text-message"></textarea>
                                <span class="msg-err d-flex justify-content-start">Mesaj boş qoyula bilməz</span>
                            </div>
                            <!-- <div class="col-12 recaptcha">
                                <div class="g-recaptcha" data-sitekey="6LcAyychAAAAAJMBRWBsJP7eQKtelAF5r8Bae9Lg"></div>
                            </div> -->
                            <div class="btn-wrap d-flex justify-content-center">
                                <button class="send btn" type="submit" id="sendButton">
                                    Göndər
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maps">
    </section>
    <!-- SECTIONS END -->
</main>